<% provide :title, t("page.users.relationships.title_page_follow") %>
<div class="row">
  <aside class="col-md-4">
    <section class="user_info">
      <h1><%= link_to @user.name, @user %></h1>
      <%= render "shared/stats" %>
    </section>
  </aside>
  <div class="panel-body">
    <div class="table-responsive table-condensed">
      <table class="table">
        <thead>
          <tr>
            <th><%= t "page.users.profile.td_name" %></th>
            <th><%= t "page.users.profile.td_email" %></th>
          </tr>
        </thead>
        <tbody>
          <% if current_user.following? @user %>
            <% @users.each do |following| %>
              <tr>
                <td><%= link_to following.email, following %></td>
                <td><%= following.email %></td>
              </tr>
            <% end %>
          <% else %>
            <% @users.each do |followers| %>
              <tr>
                <td><%= link_to followers.name, followers %></td>
                <td><%= followers.email %></td>
              </tr>
            <% end %>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>
