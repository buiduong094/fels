<% provide :title, @user.name %>
<div class="panel panel-info">
  <div class="panel-body">
    <div class="row">
      <section class="user_info  text-center">
        <h1>
          <%= t "page.users.profile.my_profile", user_name: @user.name %>
        </h1>
      </section>
    </div>
    <div class="row">
      <div class="col-md-3 col-lg-3" align="center">
        <%= gravatar_for @user %>
        <section class="stats">
          <%= render "shared/stats" %>
        </section>
        <%= render "follow_form" if logged_in? %>
      </div>
      <div class="col-md-9 col-lg-9">
        <table class="table table-user-information">
          <tbody>
            <tr>
              <td><b><%= t "page.users.profile.td_name" %></b></td>
              <td><%= @user.name %></td>
            </tr>
            <tr>
              <td><b><%= t "page.users.profile.td_email" %></b></td>
              <td><%= @user.email %></td>
            </tr>
          </tbody>
        </table>
      </div>
    </div>
  </div>
  <div class="panel-body">
    <div class="col-md-9 col-lg-5">
      <h3><%= t "page.users.profile.title_lesson" %></h3>
      <div class="table-responsive table-condensed">
        <table class="table" id="list_user">
          <thead>
            <tr>
              <th><%= t "page.users.profile.td_index" %></th>
              <th><%= t "page.users.profile.td_date" %></th>
              <th><%= t "page.users.profile.td_status" %></th>
            </tr>
          </thead>
            <tbody>
              <% @lessons.each.with_index do |lesson, index| %>
                <tr>
                  <td><%= index+1 %></td>
                  <td><%= lesson.created_at %></td>
                  <td>
                    <%= link_to lession_complete_button(lesson),
                      lesson_path(lesson) %>
                  </td>
                </tr>
              <% end %>
            </tbody>
        </table>
        <%= will_paginate @lessons %>
      </div>
    </div>
    <div class="col-md-9 col-lg-6">
      <h3><%= t "page.users.profile.title_activities" %></h3>
      <table class="table">
        <%= render partial: "shared/activity", collection: @user.activities %>
      </table>
    </div>
  </div>
  <div class="panel-footer">
    <span class="pull-right">
      <%= link_to edit_user_path(@user) do %>
        <span class="glyphicon glyphicon-edit btn btn-sm btn-warning"></span>
      <% end %>
    </span>
  </div>
</div>
