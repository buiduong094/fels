<% provide :title, t("page.admin.users.title") %>
<h2><%= t "page.admin.users.title" %></h2>
<%= form_tag users_path, method: :get do %>
  <%= text_field_tag :search, params[:search],
    placeholder: t("page.admin.users.placeholder_search") %>
  <%= submit_tag t("page.admin.users.submit_search_users"), id: "searchbtn" %>
<% end %>
<%= will_paginate %>
<table class="table table-hover">
  <thead>
    <tr>
      <th><%= t "page.admin.users.tr_STT" %></th>
      <th><%= t "page.admin.users.tr_name" %></th>
      <th><%= t "page.admin.users.tr_email" %></th>
    </tr>
  </thead>
  <tbody>
      <% @users.each.with_index do |user, index| %>
        <tr>
          <td><%= index+1 %></td>
          <td><%= user.name %></td>
          <td><%= user.email %></td>
        </tr>
      <% end %>
  </tbody>
</table>
