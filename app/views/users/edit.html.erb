<% provide :title, t("page.update_user.title") %>
<h1><%= t "page.update_user.title_edit" %></h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for @user do |f| %>

      <%= render "shared/error_messages" %>

      <%= f.label :name %>
      <%= f.text_field :name, class: "form-control" %>

      <%= f.label :email %>
      <%= f.email_field :email, class: "form-control" %>

      <%= f.label :password %>
      <%= f.password_field :password, class: "form-control" %>

      <%= f.label :password_confirmation, t("page.update_user.confirmation") %>
      <%= f.password_field :password_confirmation, class: "form-control" %>
      <br>
      <%= f.submit t("page.update_user.save_change"), class: "btn btn-primary" %>
    <% end %>
    <br>
    <div class="gravatar_edit">
      <%= gravatar_for @user %>
      <a href="http://gravatar.com/emails" target="_blank">
        <%= t "page.update_user.change" %>
      </a>
    </div>
  </div>
</div>
