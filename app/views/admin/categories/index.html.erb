<div class="row title">
  <div class="col-lg-12">
    <h1><%= t "page.admin.categories.title" %></h1>
  </div>
</div>
<div class="container">
  <div class="row">
    <div class="col-lg-8 clear"></div>
    <div class="col-lg-2"></div>
    <div class="col-lg-2">
      <%= link_to t("page.admin.categories.add"), new_admin_category_path,
        class: "btn btn-success" %>
    </div>
  </div>
</div>
<div class="row"><div class="col-lg-12"><h3></h3></div></div>
<div class="container center">
  <table class="table table-hover" id="category-index">
    <thead class="title_table">
      <tr>
        <th class="th_word">code</th>
        <th class="th_word">name</th>
        <th class="th_word">description</th>
        <th class="th_word">created_at</th>
        <th class="th_word">Edit</th>
        <th class="th_word">Delete</th>
      </tr>
    </thead>
    <tbody>
      <% @categories.each do |category| %>
        <%= render category %>
      <% end %>
    </tbody>
  </table>
  <%= will_paginate %>
</div>
