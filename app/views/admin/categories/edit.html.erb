<% provide :title, t("page.admin.categories.title_update") %>
<h2><%= t "page.admin.categories.title_page_update" %></h2>
<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for [:admin, @category] do |f| %>
      <%= render "/shared/error_messages", object: f.object %>
      <%= f.label :name %>
      <%= f.text_field :name, class: "form-control" %>
      <br>
      <%= f.label :description %>
      <%= f.text_field :description, class: "form-control" %>
      <br>
      <%= f.submit t("page.admin.categories.submit_update_category"),
        class: "btn btn-primary" %>
    <% end %>
  </div>
</div>
